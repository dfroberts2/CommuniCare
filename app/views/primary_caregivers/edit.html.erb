  <div class="form-group">
    <h2>Update About Me</h2>
  <h3> <%= form_for @pcc do |f| %> </h3>
     <div class="form-group">
       <%= f.label :About_Me %>
       <%= f.text_area :about_me %>
       <div class="form-group"
       <%= f.label :image %>
       <%= f.file_field :image %><br>
      </div>
     </div>
      <br>

      <div class="form-group">
        <button type="button" class="btn btn-primary">
       <%= f.submit "Save About Me & Image", class: "btn btn-primary"%>
      <% end %>
    </button>
     </div>
</div>

  <div class="form-group">

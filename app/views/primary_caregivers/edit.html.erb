       <%= f.text_field :phone %>

      </div>
      <div class="form-group">
       <%= f.label :Zipcode %>
       <%= f.text_field :zipcode %>
      </div>
     <div class="form-group">
       <%= f.label :Email %>
       <%= f.text_field :email %>
      </div>
      <div class="form-group">
       <%= f.label :Password_Confirmation %>

  </div>

  <div class="col-md-6">
    <div class="form-group">
      <h2>Update Patient Information</h2>
      <%= form_for [@pcc, @pcc.patient], method: :put do |f| %>

    <div class="form-group">
       <%= f.label :Patient_Name %>
       <%= f.text_field :name, class: 'form-control' %>
      </div>

    <div class="form-group">
       <%= f.label :Patient_gender %>
       <%= f.select :gender, [
        ['Male', 'male'],
        ['Female', 'female']] %>
    </div>

    <div class="form-group">
       <%= f.label :Patient_habits %>
       <%= f.text_field :habits, class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= f.label :Patient_Routine %>
       <%= f.text_field :routine, class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= f.label :Patient_ailments %>
       <%= f.text_field :ailments, class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= f.label :Patient_mediation %>
       <%= f.text_field :medication, class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= f.label :Patient_background %>
       <%= f.text_field :background, class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= f.label :Patient_age %>
       <%= f.text_field :age, class: 'form-control' %>
    </div>

    <div class="form-group">
       <%= f.label :Patient_hobbies %>
       <%= f.text_field :hobbies, class: 'form-control' %>
    </div>

    <div>
    <div class="form-group">
      <button type="button" class: "btn btn-primary"%>
       <%= f.submit "Save Patient Profile", class: "btn btn-primary" %>
       <%end%>
      </div>
      </button>

      </div>
    </div>
  </div>
  </div>
  <div class="user-form-container about-me-edit">
  <div class="form-group">
    <h2>Update About Me</h2>
    <%= form_for @pcc do |f| %>
     <div class="form-group">
       <%= f.label :About_Me %>
       <%= f.text_area :about_me, class: 'form-control' %>
       <div class="form-group">
       <%= f.label :image %>
       <%= f.file_field :image, class: 'form-control' %><br>
      </div>
     </div>
      <br>

      <div class="form-group">
        <button type="button" class="btn btn-primary">
